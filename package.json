{
  "name": "commentia",
  "version": "0.1.0",
  "private": true,
  "description": "リアルタイムコメント投稿アプリケーション",
  "workspaces": [
    "packages/frontend",
    "packages/backend",
    "packages/infrastructure",
    "packages/shared"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "biome check --apply .",
    "format": "biome format --write .",
    "type-check": "npm run type-check --workspaces",
    "dev": "npm run dev -w packages/frontend",
    "backend:build": "npm run build -w packages/backend",
    "infra:synth": "npm run synth -w packages/infrastructure",
    "infra:deploy": "npm run deploy -w packages/infrastructure",
    "clean": "npm run clean --workspaces"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.0",
    "typescript": "^5.7.0",
    "@types/node": "^22.0.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.0",
    "ts-jest": "^29.2.0"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/commentia/commentia.git"
  },
  "author": "Commentia Team",
  "license": "MIT"
}