# Backend Environment Variables
# These variables are used by Lambda functions and backend services

# AWS Configuration
AWS_REGION=us-east-1
DYNAMODB_ENDPOINT=http://localhost:4566

# DynamoDB Table Names
ROOMS_TABLE_NAME=commentia-dev-rooms
COMMENTS_TABLE_NAME=commentia-dev-comments
CONNECTIONS_TABLE_NAME=commentia-dev-connections
LIKES_TABLE_NAME=commentia-dev-likes

# API Gateway Configuration
WEBSOCKET_API_ENDPOINT=wss://localhost:3001
CORS_ALLOWED_ORIGINS=http://localhost:5173

# Lambda Configuration
LAMBDA_TIMEOUT=30
LAMBDA_MEMORY=256
NODE_ENV=development

# Logging
LOG_LEVEL=debug
ENABLE_DETAILED_LOGGING=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
MAX_REQUESTS_PER_MINUTE=60
MAX_REQUESTS_PER_HOUR=1000

# Security
ENABLE_XSS_PROTECTION=true
ENABLE_INPUT_VALIDATION=true