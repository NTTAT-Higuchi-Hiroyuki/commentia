# Infrastructure Environment Variables
# These variables are used by AWS CDK for deployment

# AWS Configuration
CDK_DEFAULT_ACCOUNT=123456789012
CDK_DEFAULT_REGION=us-east-1

# Stack Configuration
STACK_NAME_PREFIX=commentia
STAGE=dev

# Domain Configuration (optional)
# CUSTOM_DOMAIN_NAME=commentia.example.com
# CERTIFICATE_ARN=arn:aws:acm:us-east-1:123456789012:certificate/xxxxxxxx

# DynamoDB Configuration
DYNAMODB_BILLING_MODE=PAY_PER_REQUEST
ENABLE_POINT_IN_TIME_RECOVERY=false
ENABLE_DELETION_PROTECTION=false

# Lambda Configuration
LAMBDA_RUNTIME=nodejs22.x
LAMBDA_ARCHITECTURE=arm64
LAMBDA_MEMORY_SIZE=256
LAMBDA_TIMEOUT=30

# API Gateway Configuration
API_THROTTLE_BURST_LIMIT=2000
API_THROTTLE_RATE_LIMIT=1000

# CloudFront Configuration
CLOUDFRONT_PRICE_CLASS=PriceClass_100
ENABLE_CLOUDFRONT_LOGGING=false

# Monitoring
ENABLE_XRAY_TRACING=true
ENABLE_CLOUDWATCH_ALARMS=true
LOG_RETENTION_DAYS=7

# Deployment Configuration
ENABLE_TERMINATION_PROTECTION=false
ENABLE_VERSION_TAGGING=true